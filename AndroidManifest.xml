    <uses-sdk
        android:maxSdkVersion="22"
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <application>
        <activity android:name="core.september.textmesecure.FriendList" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" >
                </action>

                <category android:name="android.intent.category.NORMAL" >
                </category>
            </intent-filter>
        </activity>

        <service android:name="core.september.textmesecure.services.IMService" >
        </service>

        <activity android:name="core.september.textmesecure.Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" >
                </action>

                <category android:name="android.intent.category.LAUNCHER" >
                </category>
            </intent-filter>
        </activity>
        <activity android:name="core.september.textmesecure.Messaging" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" >
                </action>

                <category android:name="android.intent.category.NORMAL" >
