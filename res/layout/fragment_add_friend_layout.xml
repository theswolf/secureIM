<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:padding="20dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find user by name or mail"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:textSize="20dp"
            android:layout_marginBottom="10dp"/>
       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/searchFriendButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
      <ListView
            android:id="@android:id/list"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </ListView>
    </LinearLayout>
</LinearLayout>